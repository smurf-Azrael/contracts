pragma solidity 0.6.6;

contract TortoisesFactory is Pausable, Ownable {
    using SafeMath for uint256;

    INFT public nft;
    INFTRepository public nftRepository;

    uint256 public feeWei;
    uint256 public fee;
    address public devFeeAddress;
    IFeeToken public feeToken;

    ITortoiseRole public tortoiseRole;
    ITortoiseGrade public tortoiseGrade;
    ITortoiseSkill public tortoiseSkill;
    ITortoiseFiveElements public tortoiseFiveElements;

    /**
     * @dev Triggers stopped state.
     *
     * Requirements:
     *
     * - The contract must not be paused.
     */
    function pause() public virtual onlyOwner whenNotPaused {
        _pause();
    }

    /**
     * @dev Returns to normal state.
     *
     * Requirements:
     *
     * - The contract must be paused.
     */
    function unpause() public virtual onlyOwner whenPaused {
        _unpause();
    }


    function setNFT(address addr) external onlyOwner {
        nft = INFT(addr);
    }

    function setNFTRepository(address addr) external onlyOwner {
        nftRepository = INFTRepository(addr);
    }

    function setFee(uint256 number) external onlyOwner {
        fee = number;
        feeWei = fee * 10 ** uint(feeToken.decimals());
    }

    function setDevFeeAddress(address addr) external onlyOwner {
        devFeeAddress = addr;
    }

    function setFeeToken(address addr) external onlyOwner {
        feeToken = IFeeToken(addr);
    }

    function setTortoiseRole(address addr) external onlyOwner {
        tortoiseRole = ITortoiseRole(addr);
    }

    function setTortoiseGrade(address addr) external onlyOwner {
        tortoiseGrade = ITortoiseGrade(addr);
    }

    function setTortoiseSkill(address addr) external onlyOwner {
        tortoiseSkill = ITortoiseSkill(addr);
    }

    function setTortoiseFiveElements(address addr) external onlyOwner {
        tortoiseFiveElements = ITortoiseFiveElements(addr);
    }

    function getRandomNumber(uint256 id) internal view returns(uint32) {
        return uint32(uint256(keccak256(abi.encodePacked("8F4A7142E03F4EF089A4C28878964C5D", block.timestamp, block.difficulty, msg.sender, id))) % 100000);
    }

    function build() public whenNotPaused returns(uint256) {
        uint256 id = nft.mint(_msgSender());
        uint32 randomNumber = getRandomNumber(id);

        feeToken.transferFrom(_msgSender(), devFeeAddress, feeWei);

        uint32[] memory role = tortoiseRole.randomRole(randomNumber);
        (uint grade, uint skillNumer, uint32 blood, uint32 attack) = tortoiseGrade.randomGrade(randomNumber);
        role[4] = role[4]+blood;
        role[5] = role[5]+attack;
        uint[] memory skills = tortoiseSkill.randomSkill(randomNumber, _msgSender(), role[0], skillNumer);
        uint fiveElement = tortoiseFiveElements.randomFiveElements(randomNumber);

        nftRepository.add(id, role, grade, skills, fiveElement);

        return id;
    }

}